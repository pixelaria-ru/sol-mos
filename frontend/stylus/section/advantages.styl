.section
  &__advantages
    padding-top 110px
    padding-bottom 100px
    .advantages
      &__item
        width 100%
        padding-top 25px
        padding-bottom 10px
        position relative
        &:not(:last-child)
          border-right 1px solid #d5d5d5
          padding-right 45px
          margin-right 45px
        &:before
          content ''
          position absolute
          opacity 0.1
          z-index -1
          width 150px
          height 150px
        &:nth-child(1)
          &:before
            background url('../images/advantage-1.jpg')
            background-size cover
        &:nth-child(2)
          &:before
            background url('../images/advantage-2.jpg')
            background-size cover
        &:nth-child(3)
          &:before
            background url('../images/advantage-3.jpg')
            background-size cover
            opacity 1
        h6
          color #3abdc9
          font-family "Circe"
          font-size 24px
          font-weight 400
          letter-spacing -0.1px
        p
          color #444444
          font-family "Circe"
          max-width 300px
          font-size 16px
          font-weight 400
          line-height 28px
          margin-top 10px
          text-align center
          b
            font-weight 700
