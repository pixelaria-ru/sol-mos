.section__special-sale
  padding-top 100px
  padding-bottom 140px
.special-sale
  &__info
    background-color #fafafa
    padding 40px 50px
    padding-right 150px
    max-width 700px
    max-height 360px
    width 100%
    .over-heading
      color #999999
      font-size 16px
    h3
      color #444444
      font-size 24px
      font-weight 700
      line-height 36px
      text-transform uppercase
      margin-top 13px
      span
        color #3abdc9
    .button
      color #ffffff
      font-size 16px
      height 50px
      background-color #3abdc9
      padding 0 30px
      margin-top 45px
  &__list
    margin-top 15px
    &:not(:last-child)
      border-right 1px solid #d9d9d9
      padding-right 12px
      margin-right 12px
    p
      color #444444
      font-size 16px
      font-weight 300
      line-height 32px
  &__img
    max-width 440px
    margin-top 40px
    margin-left -65px
    width 100%
    max-height 360px
