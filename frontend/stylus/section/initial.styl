.section
  &__initial
    padding-top 180px
    padding-bottom 235px
    background url('../images/initial-screen.png')
    background-repeat no-repeat
    position relative
    &:before
      content ''
      background url('../images/initial-mask.jpg')
      position absolute
      z-index -1
      top 0
      bottom 0
      left 0
      right 0
    .over-heading
      color #ffffff
      font-family "Circe"
      font-size 24px
      font-weight 400
    h1
      color #ffffff
      font-family "Circe"
      font-size 48px
      font-weight 700
      line-height 48px
      text-transform uppercase
      margin-top 22px
    p
      color #ffffff
      font-family "Circe"
      margin-top 20px
      font-size 18px
      font-weight 400
      line-height 30px
      text-align center
      max-width 690px
