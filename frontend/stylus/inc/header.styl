.header
  &__top
    background-image linear-gradient(to right, #3fc6d2 0%, #3aabc9 100%)
    max-height 40px
    &_left-side
      padding-top 11px
      padding-bottom 12px
      p,a
        margin-right 25px
        color #ffffff
        font-size 14px
    &_search
      input
        background 0
        color #ffffff
        font-size 14px
        &::placeholder
          color #ffffff
    &_right-side
      .button
        color #ffffff
        font-family "Circe"
        font-size 14px
        font-weight 400
        background-color rgba(0, 0, 0, 0.1)
        height 100%
        padding 0 30px
  &__main
    padding-top 30px
    padding-bottom 30px
    background-color #ffffff
    &_logotype
      margin-right 30px
    &_menu-item
      margin-right 25px
      a
        color #444444
        font-family "Circe"
        font-size 16px
        font-weight 400
        margin-right 16px
      &:after
        content ''
        background-image url('../images/arrow-down.png')
        background-repeat no-repeat
        background-position center
        width 12px
        height 12px
        display block
    &_tel
      color #444444
      font-family "Circe"
      font-size 16px
      font-weight 400
      span
        color #31aeb9
