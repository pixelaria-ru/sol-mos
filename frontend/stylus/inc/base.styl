.section
  padding-top 40px
  padding-bottom 40px
  
  &__title 
    margin-bottom 40px
  
.img
  display block
  &--responsive
    width 100%
    height auto

.input
  display flex
  align-items center
  width auto
  min-width 120px
  height 50px  
  border 1px solid #3abdc9
  background-color #fafafa
  padding 0 20px
  margin-right 10px
  
  &:last-child
    margin-right 0
  
.button
  display flex
  align-items center
  text-align center
  justify-content center
  
  color #ffffff
  font-size 16px
  height 50px
  padding 0 20px
  
  transition background-color 0.3s ease-in-out
  
  &--green
    border 1px solid #3abdc9
    background-color #3abdc9
    
    &:hover
      background-color rgba(255, 255, 255, 0.2)
  &--white
    border 1px solid #ffffff
    background-color transparent
    
    &:hover
      background-color rgba(255, 255, 255, 0.3)